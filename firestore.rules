rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own dailyGames subcollection
      match /dailyGames/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Users can read and write their own pendingUsernames document (used during signup/verification)
    match /pendingUsernames/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

